# OpenWeatherMap API configuration
OPENWEATHER_API_KEY=your_api_key
OPENWEATHER_BASE_URL=http://api.openweathermap.org/data/2.5

# API Selection Options (uncomment as needed)
# These are set to false by default since most free accounts don't have access
USE_ONECALL_V3=false     # Set to true if you have OneCall API 3.0 subscription
USE_ONECALL_V25=false    # Set to true if you have access to OneCall API 2.5
USE_DAILY_FORECAST=false # Set to true if you have access to 16-day forecast API
# The 5-day/3-hour forecast API is always tried first as it's usually available with free accounts

# OpenAI API configuration
OPENAI_API_KEY=your_openai_api_key
OPENAI_MODEL=gpt-4-turbo-preview

# Database configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=weather_db
DB_USER=postgres
DB_PASSWORD=your_password

# Application settings
APP_NAME=Weather ETL Chatbot
DEBUG=True
LOG_LEVEL=INFO
SECRET_KEY=your_secret_key_here

# API Configuration
API_V1_PREFIX=/api/v1
PROJECT_NAME=Weather ETL Chatbot
BACKEND_CORS_ORIGINS=["http://localhost:8000", "http://localhost:3000"]
