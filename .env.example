# OpenWeatherMap API configuration
OPENWEATHERMAP_API_KEY=your_api_key_here
WEATHER_CITY=Louisville,KY,US

# API Selection Options (uncomment as needed)
# These are set to false by default since most free accounts don't have access
USE_ONECALL_V3=false     # Set to true if you have OneCall API 3.0 subscription
USE_ONECALL_V25=false    # Set to true if you have access to OneCall API 2.5
USE_DAILY_FORECAST=false # Set to true if you have access to 16-day forecast API
# The 5-day/3-hour forecast API is always tried first as it's usually available with free accounts

# OpenAI API configuration
OPENAI_API_KEY=your_openai_api_key_here

# Database configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=weather_db
DB_USER=postgres
DB_PASSWORD=your_password_here

# Application settings
APP_ENV=development  # development, testing, or production
LOG_LEVEL=info       # debug, info, warning, error, critical
