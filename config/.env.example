# OpenWeatherMap API key (required for weather data collection)
# Sign up at https://openweathermap.org/api to get your API key
OPENWEATHERMAP_API_KEY=your_api_key_here

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=weather_db
DB_USER=postgres
DB_PASSWORD=your_database_password

# OpenAI API Key (required for chatbot functionality)
# Get your API key from https://platform.openai.com/
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4o-mini
OPENAI_MAX_TOKENS=2000
OPENAI_TEMPERATURE=0.7

# Flask Configuration
FLASK_SECRET_KEY=your_secret_key_here
FLASK_ENV=development  # or production
FLASK_PORT=5000
FLASK_HOST=0.0.0.0     # 0.0.0.0 for all interfaces, 127.0.0.1 for local only

# Logging configuration
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, or CRITICAL
